<Window x:Class="RemnantSaveManager.SaveAnalyzer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemnantSaveManager"
        mc:Ignorable="d"
        Title="SaveAnalyzer" Height="576.562" Width="974.902" Closing="Window_Closing" Icon="Resources/SearchMember_32x.png">
    <Grid Background="#FF343A40">
        <ComboBox x:Name="cmbCharacter" HorizontalAlignment="Left" Margin="78,14,0,0" VerticalAlignment="Top" IsReadOnly="True" SelectionChanged="CmbCharacter_SelectionChanged" Width="120"/>
        <Label Content="Character:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#FFF8F9FA"/>
        <TabControl x:Name="tabAnalyzer" Margin="0,62,0,0">
            <TabItem Header="Campaign">
                <Grid Background="#FF343A40">
                    <DataGrid x:Name="dgCampaign" Background="{x:Null}" BeginningEdit="dgBeginningEdit" AutoGeneratingColumn="autoGeneratingColumn" IsReadOnly="True" CanUserSortColumns="False" BorderBrush="{x:Null}" Grid.ColumnSpan="2" LayoutUpdated="dgCampaign_LayoutUpdated" AutoGeneratedColumns="autoGeneratedColumns"/>
                </Grid>
            </TabItem>
            <TabItem Header="Adventure">
                <Grid Background="#FF343A40">
                    <DataGrid x:Name="dgAdventure" Background="#FF343A40" Grid.ColumnSpan="2" BeginningEdit="dgBeginningEdit" AutoGeneratingColumn="autoGeneratingColumn" CanUserSortColumns="False" BorderBrush="{x:Null}" Foreground="Black" IsReadOnly="True" AutoGeneratedColumns="autoGeneratedColumns" LayoutUpdated="dgAdventure_LayoutUpdated"/>
                </Grid>
            </TabItem>
            <TabItem Header="Missing Items" Visibility="Collapsed">
                <Grid Background="#FF343A40">
                    <TextBox x:Name="txtMissingItems" TextWrapping="Wrap" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red" VerticalScrollBarVisibility="Auto" FontSize="14" Padding="5,5,0,0" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Missing Items">
                <Grid Background="#FF343A40">
                    <TreeView x:Name="treeMissingItems" Background="{x:Null}" Foreground="#FFF8F9FA" BorderBrush="{x:Null}" FontSize="14">
                        <TreeView.Resources>
                            <ContextMenu x:Key="ItemGroupContext" StaysOpen="True">
                                <MenuItem Header="⎘ Copy" Click="CopyItem_Click"/>
                            </ContextMenu>
                            <ContextMenu x:Key="ItemContext" StaysOpen="True">
                                <MenuItem Header="◳ Open wiki" Click="SearchItem_Click"/>
                                <MenuItem Header="⎘ Copy" Click="CopyItem_Click"/>
                            </ContextMenu>
                        </TreeView.Resources>
                    </TreeView>
                </Grid>
            </TabItem>
            <TabItem Header="Credits">
                <Grid Background="#FF343A40">
                    <Label x:Name="lblCredits" Content="" Margin="15,15,10,10" Foreground="#FFF8F9FA" FontSize="18" Cursor="Hand" MouseLeftButtonUp="LblCredits_MouseLeftButtonUp"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Slider x:Name="sliderSize" HorizontalAlignment="Right" Margin="0,20,31,0" VerticalAlignment="Top" Width="164" Value="18" Maximum="30" Minimum="6" ValueChanged="sliderSize_ValueChanged" SmallChange="6" TickPlacement="BottomRight" LargeChange="6" TickFrequency="6" IsSnapToTickEnabled="True"/>
        <Label Content="Zoom" HorizontalAlignment="Right" Margin="0,18,221,0" VerticalAlignment="Top" Foreground="#FFF8F9FA"/>
        <Image HorizontalAlignment="Right" Height="16" Margin="0,20,200,0" VerticalAlignment="Top" Width="16" Source="Resources/ZoomOut_16x.png"/>
        <Image HorizontalAlignment="Right" Height="16" Margin="0,20,10,0" VerticalAlignment="Top" Width="16" Source="Resources/ZoomIn_16x.png"/>
        <Button x:Name="btnExport" Content="Save to File" HorizontalAlignment="Right" Margin="0,49,38,0" VerticalAlignment="Top" Width="90" Height="23" ToolTip="Export the current tab to a text file" Click="btnExport_Click"/>
        <Button x:Name="btnCopy" Content="⎘" HorizontalAlignment="Right" Margin="0,49,10,0" VerticalAlignment="Top" Width="23" Height="23" ToolTip="Copy current tab to clipboard." FontSize="20" Padding="1,-4,1,1" Click="btnCopy_Click"/>
    </Grid>
</Window>
